<script>
function emptyValitadtion() {
	var usr=document.getElementById("loginusr").value;
	var pwd=document.getElementById("loginpwd").value;
	if(usr=="")
 document.getElementById("usr").innerHTML = "username Should not be empty";
}
else if(pwd=="")
{
	 document.getElementById("usr").innerHTML = "Password Should not be empty";
}
else if(usr=="" && pwd==""){
	 document.getElementById("usr").innerHTML = "username and Password Should not be empty";
}
	
</script>
